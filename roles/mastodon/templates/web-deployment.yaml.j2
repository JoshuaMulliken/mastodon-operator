kind: Deployment
apiVersion: apps/v1
metadata:
  name: '{{ ansible_operator_meta.name }}-mastodon-web'
  namespace: '{{ ansible_operator_meta.namespace }}'
spec:
  replicas: {{ web_replicas }}
  selector:
    matchLabels:
      app.kubernetes.io/name: mastodon
      app.kubernetes.io/instance: '{{ ansible_operator_meta.name }}'
      app.kubernetes.io/part-of: mastodon-operator
      app.kubernetes.io/managed-by: kustomize
      app.kubernetes.io/created-by: mastodon-operator
      app.kubernetes.io/component: web
  template:
    metadata:
      labels:
        app.kubernetes.io/name: mastodon
        app.kubernetes.io/instance: '{{ ansible_operator_meta.name }}'
        app.kubernetes.io/part-of: mastodon-operator
        app.kubernetes.io/managed-by: kustomize
        app.kubernetes.io/created-by: mastodon-operator
        app.kubernetes.io/component: web
    spec:
      containers:
        - name: mastodon-web
          image: '{{ image }}'
          imagePullPolicy: Always
          command:
            - bundle
            - exec
            - puma
            - -C
            - config/puma.rb
          ports:
            - containerPort: 3000
              name: http
              protocol: TCP
          envFrom:
            - configMapRef:
                name: '{{ ansible_operator_meta.name }}-mastodon-config'
            - secretRef:
                name: '{{ ansible_operator_meta.name }}-mastodon-secret'
          livenessProbe:
            httpGet:
              path: /health
              port: http
            initialDelaySeconds: 5
            periodSeconds: 10
          readinessProbe:
            httpGet:
              path: /health
              port: http
            initialDelaySeconds: 5
            periodSeconds: 10
{% if not s3_enabled %}
          volumeMounts:
            - name: mastodon-system
              mountPath: /opt/mastodon/public/system
      volumes:
        - name: mastodon-system
          persistentVolumeClaim:
            claimName: '{{ ansible_operator_meta.name }}-mastodon-system'
{% endif %}